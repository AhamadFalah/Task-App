<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".TaskAddActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_blue"
        android:padding="8dp">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_task"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/save"
            android:src="@drawable/save"
            app:tint="@color/blue" />

    </RelativeLayout>

    <EditText
        android:id="@+id/task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_blue"
        android:hint="@string/task_title"
        android:inputType="text"
        android:textColor="@color/blue"
        android:padding="8dp" />

    <EditText
        android:id="@+id/task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_title"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_blue"
        android:hint="@string/task_description"
        android:inputType="textMultiLine"
        android:textColor="@color/blue"
        android:padding="8dp" />

    <Spinner
        android:id="@+id/priority_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_description"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_blue"
        android:entries="@array/priority_options"
        android:padding="8dp" />

    <EditText
        android:id="@+id/deadline_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/priority_spinner"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_blue"
        android:clickable="true"
        android:focusable="false"
        android:hint="@string/select_deadline"
        android:inputType="date"
        android:textColor="@color/blue"
        android:padding="8dp"
        android:autofillHints="" />

</RelativeLayout>